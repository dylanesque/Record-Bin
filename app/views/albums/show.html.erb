<div class="row">
  <div class="col-md-4">
    <%= image_tag @album.image.variant(resize_to_limit: [200, 200]) %>
  </div>

	<div class="col-md-8">
      <h2><%= @album.title %></h2>
      <h3><span>By</span> <%= @album.artist %></h3>
      <h2 class="avg-rating">Average Rating</h2>
			<div class="average-review-rating" data-score=<%= @average_review %>></div>
		  <p><%= @album.description %></p>
    </div>
	</div>


</div>

<div class="reviews">

  
    <h1>Reviews</h1>
    <%= render @album.reviews %>

    <div>
      <%= link_to "Add Review", new_album_review_path(@album), class: "btn-custom" %>
    </div>

  </div>	



<div class="links btn-group">

	<%= link_to "Back", root_path, class: "btn btn-custom" %>

  <% if user_signed_in? %>

  <% if @album.user_id == current_user.id %>
  
    <%= link_to 'Edit', edit_album_path(@album) %> 
    <%= link_to 'Delete', album_path(@album), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    
  <% end %>  
  
  <% end %>

  <script>
    $(document).ready(function() {
      $('.individual-review-rating').raty({
          readOnly: true,
          score: function() {
              return $(this).attr('data-score');
          },
          path: '/assets/'
      });
    });  
  </script>

  <script>
    $(document).ready(function() {
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
  });
    });
</script>

</div>	










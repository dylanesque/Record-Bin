<div class="row">
  <div class="col-md-4">
    <%= image_tag @album.image.variant(resize_to_limit: [200, 200]) %>
  </div>

	<div class="col-md-8">
      <h2><%= @album.title %></h2>
			<h3><span>By</span> <%= @album.artist %></h3>
		  <p><%= @album.description %></p>
    </div>
	</div>


</div>



<div class="links btn-group">

	<%= link_to "Back", root_path, class: "btn btn-custom" %>

  <% if user_signed_in? %>

  <% if @album.user_id == current_user.id %>
  
    <%= link_to 'Edit', edit_album_path(@album) %> 
    <%= link_to 'Delete', album_path(@album), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    
  <% end %>  
  
  <% end %>

</div>	











<div class="container">
<h1 class="mt-2">Edit Album</h1>
<hr class="mb-5">


<%= bootstrap_form_for(@album, layout: :horizontal ) do |f| %>
  <%= f.select(:genre_id, options_for_select(@genres), :prompt => "Select a genre") %>
  <%= f.file_field :image %>
  <%= f.text_field :title, label: "Record Title" %>
  <%= f.text_field :description %>
  <%= f.text_field :artist %>
  <%= f.submit %>
<% end %>
</div>



<%= link_to 'Show', @album %> 
<%= link_to 'Back', albums_path %>

<div class="container">
<%= bootstrap_form_for(@album, layout: :horizontal ) do |f| %>
  <%= f.select(:genre_id, options_for_select(@genres), :prompt => "Select a genre") %>
  <%= f.file_field :image %>
  <%= f.text_field :title, label: "Record Title" %>
  <%= f.text_field :description %>
  <%= f.text_field :artist %>
  <%= f.submit "Add Album" %>
<% end %>
</div>
